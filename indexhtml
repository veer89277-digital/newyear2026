    <script>
        // Typing Text
        const sentences = [
            "Digital feel wali shayari...",
            "Love + Technology ka combo...",
            "Dil se nikli lines...",
            "GKP ka digital touch..."
        ];

        let i=0, j=0;
        let speed = 80;

        function typingEffect(){
            if(j < sentences[i].length){
                document.getElementById("typing").innerHTML += sentences[i].charAt(j);
                j++;
                setTimeout(typingEffect, speed);
            }else{
                setTimeout(() => {
                    document.getElementById("typing").innerHTML = "";
                    j = 0;
                    i = (i+1)%sentences.length;
                    typingEffect();
                },1500);
            }
        }

        typingEffect();


